<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 状态栏颜色 5.x + -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- toolbar 颜色 5.x + -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 光标颜色  -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="actionBarSize">@dimen/actionbar_size</item>
    </style>

    <!-- 这个设置和上面的NoActionBar主题是一样的效果 -->
    <style name="BaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppStartLoad" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@mipmap/splash_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="view_line">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/base_stroke</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="split_line">
        <item name="android:background">@color/base_stroke</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="LightFlatWaveButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/button_shape</item>
        <item name="rd_cornerRadius">4dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
